<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
	<title>Aliments</title>
	<%= javascript_include_tag(:defaults) %>
	<%= javascript_include_tag("jquery.tipTip.minified") %>
	<script src="http://connect.facebook.net/en_US/all.js"></script>
	<%= csrf_meta_tag %>
	<%= stylesheet_link_tag 'blueprint/screen' %>
	<%= stylesheet_link_tag 'main' %>

</head>
<body class="">
  <div class="">
			<%= render "shared/header" %>      
  </div>
  <%= render ("shared/menu")%>
	<div class="">
		<div class="container">
		  <div class="column span-19">
  			<%= yield %>
		  </div>
		  <div class="column span-5 last side">Lateral</div>
		</div>
	</div>
  <div id="msgBox">
    <%=render :partial=>"/shared/message",:locals => {:classType => "errorMsg",:msg=>flash[:error]} unless flash[:error].nil?%>
    <%=render :partial=>"/shared/message",:locals => {:classType => "infoMsg",:msg=>flash[:info]} unless flash[:info].nil?%>
    <%=render :partial=>"/shared/message",:locals => {:classType => "successMsg",:msg=>flash[:success]} unless flash[:success].nil?%>
  </div>
</body>
</html>

